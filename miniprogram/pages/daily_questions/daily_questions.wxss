/* miniprogram/pages/daily_questions/daily_questions.wxss */

page {
  background: #eeece8;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.padding-left {
  margin-left: 15px;
}

.question-button {
  width: 80%;
  margin-top: 20px;
  border-radius: 10px;
  text-align: left;
  vertical-align: middle;
}

.button-text {
  height: 100%;
  vertical-align: center;
  word-break: break-all;
  line-height: 60rpx;
  padding: 15rpx 0rpx;
}

.page-seletor {
  position: fixed !important;
  bottom: 10px;
  width: 100%;
}

.wrong-answer {
  background-color: red;
}

.correct-answer {
  background-color: lightgreen;
}

.explaination {
  text-align: left;
  font-size: 14px;
  margin: 10px;
  max-height: 100px;
  width: 94%;
  /* background-color: gray; */
  background-color: rgba(255, 255, 255, 0.5);
}

.container {
  width: 100%;
  height: 100%;
}

.question-panel {
  width: 100%;
  height: 70%;
  margin-bottom: 100rpx;
}

.page-panel {
  width: 100%;
  height: 10%;
}

.question {
  padding: 15px;
  word-wrap: break-word;
  background: #eeece8;
}

.remark {
  background-color: white;
  margin: 0px 20px;
}

.sumbitText {
  padding: 5rpx;
  width: 20%;
  text-align: center;
  color: rgb(100, 125, 255);
  margin: 10px auto;
  border: 1px #e0f2fd solid;
  background-color: #e0f2fd;
  border-radius: 10px;
}
